{
  "name": "@veracity/node-auth",
  "version": "0.3.0-beta",
  "description": "A library for authenticating with Veracity and retrieving one or more access tokens for communicating with APIs.",
  "scripts": {
    "build:copy-files": "ts-node -T scripts/copy-files.ts",
    "build:types": "ts-node -T scripts/add-types-to-readme.ts",
    "build:toc": "markdown-toc -i README.md",
    "build:tsc": "rimraf dist && tsc --build tsconfig.json",
    "build": "npm run build:tsc && npm run build:types && npm run build:toc && npm run build:copy-files",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/veracity/node-auth.git"
  },
  "keywords": [
    "veracity",
    "authentication",
    "openid"
  ],
  "author": "Veracity",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/veracity/node-auth/issues"
  },
  "homepage": "https://www.veracity.com",
  "dependencies": {
    "base64url": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash.omit": "^4.5.0",
    "nanoid": "^2.0.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  },
  "peerDependencies": {
    "passport": "^0.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/express-session": "^1.15.13",
    "@types/jest": "^24.0.17",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/lodash.omit": "^4.5.6",
    "@types/nanoid": "^2.0.0",
    "@types/node": "^12.7.1",
    "@types/node-forge": "^0.8.6",
    "@types/passport": "^1.0.0",
    "@types/request": "^2.48.2",
    "@types/request-promise-native": "^1.0.16",
    "fast-glob": "^3.0.4",
    "jest": "^24.8.0",
    "markdown-toc": "^1.2.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "optionalDependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "node-forge": "^0.8.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "bail": 1
  }
}
